#!/usr/bin/env python3.4

class Installation:

    def __init__(self, numero, nom):
        self.numero = numero
        self.nom = nom
        
        conn = sqlite3.connect('installations.db')

	c = conn.cursor()

	c.execute("DROP TABLE IF EXISTS installations")
	c.execute("CREATE TABLE installations(numero integer, nom text)")

	conn.commit()
	conn.close()
